<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.InputWindowController">
   <children>
      <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="45.0" prefWidth="600.0">
         <children>
            <Label prefHeight="34.0" prefWidth="42.0" text="From:" />
            <TextField fx:id="txtStart" prefHeight="17.0" prefWidth="149.0" />
            <Label prefHeight="25.0" prefWidth="87.0" text="to:" />
            <TextField fx:id="txtEnd" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <AnchorPane prefHeight="100.0" prefWidth="49.0" />
            <Label prefHeight="29.0" prefWidth="86.0" text="Gain =" />
            <TextField fx:id="txtGain" prefHeight="34.0" prefWidth="149.0" />
            <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#btnAddClicked" text="Add Branch" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label fx:id="lblWarning" />
            <Button fx:id="btnCalc" mnemonicParsing="false" onAction="#btnCalcClicked" text="show result" />
         </children>
      </HBox>
   </children>
</VBox>
